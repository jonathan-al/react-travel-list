{
  "env": {
    "browser": true,
    "es2021": true,
    "node": false,
    "jest": true
  },
  "extends": [
    "plugin:react/recommended",
    "standard",
    "prettier"
  ],
  "plugins": [
    "react",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "no-unused-expressions": "off",
    "prettier/prettier": [
      "warn",
      {
        "printWidth": 70,
        "tabWidth": 2,
        "semi": false
      }
    ]
  }
}